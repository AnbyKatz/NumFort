
# Compiler Flags
F90C = ifort
F90FLAGS = -O2
CFLAGS = -O2 -mkl

# Lapack and numFort libs
LALIBS = -lmkl_lapack95_lp64
NUMLIBS = -I$(DIR) $(DIR)kinds.o $(DIR)lapack.o $(DIR)numFort.o $(DIR)minf.o
PLPLOT = $(DIR)PLplots.o -lplplotfortran -lplplot $$(pkg-config --cflags --libs plplot-fortran)

LIBS = $(NUMLIBS) $(LALIBS) $(PLPLOT)

# Own personal object files
OBJS = 

# Pattern Matching
%.o: %.f90
	$(F90C) $(CFLAGS) -c $< $(LIBS)

#--------------------------Editable MakeFile-------------------------
# Type cpmake in the terminal to copy this makefile and the plot code
# into your current directory

all: filename

filename: filename.f90 $(OBJS)
	$(F90C) $(CFLAGS) -o $@ $< $(OBJS) $(LIBS) 

clean:
	rm *.o *.mod
