#--------------------------Makefile Template-------------------------
# simply change filename to your filename where ever it appears

# Compiler Flags
F90 = gfortran

# Lapack and numFort libs
NUMLIBS = -I$(NumFortLitePath) $(NumFortLitePath)kinds.o $(NumFortLitePath)NumFortLite.o $(NumFortLitePath)minf.o

LIBS = $(NUMLIBS)

# Own personal object files
OBJS = 

# Pattern Matching
%.o: %.f90
	$(F90) -c $< $(LIBS)

#--------------------------Editable MakeFile-------------------------
all: filename

filename: filename.f90 $(OBJS)
	$(F90) -o $@ $< $(OBJS) $(LIBS) 
clean:
	rm *.o *.mod
