
F90C = ifort
F90FLAGS = -O2
CFLAGS = -O2 -mkl

LIBS = -lmkl_lapack95_lp64
MYLIBS = -I$(DIR)

%.o: %.f90
	$(F90C) $(CFLAGS) -c $<

# Library object files
LIBOBJS = $(DIR)kinds.o\
	$(DIR)lapack.o\
	$(DIR)numFort.o

# Own personal object files
OBJS = 

all: filename\
     customPlot\
     pyplots

filename: filename.f90 $(OBJS)
	$(F90C) $(CFLAGS) -o $@ $< $(OBJS) $(LIBOBJS) $(LIBS) $(MYLIBS)

# Dependencies


# Creates plotting files
customPlot: 
	if [ ! -f customPlot.py ] ; \
	then \
		touch customPlot.py; \
		cat $(DIR)/customPlot.py >> customPlot.py; \
		chmod +x customPlot.py; \
	fi;

pyplots:
	if [ ! -f pyplots.py ] ; \
	then \
		touch pyplots.py; \
		cat $(DIR)/pyplots.py >> pyplots.py; \
		chmod +x pyplots.py; \
	fi; 

clean:
	rm *.o *.mod\
        rm customPlot.py pyplots.py
