
# Compiler Flags
F90C = ifort
F90FLAGS = -O2
CFLAGS = -O2 -mkl

# Lapack Libs
LIBS = -lmkl_lapack95_lp64
MYLIBS = -I$(DIR)

# Library object files
LIBOBJS = $(DIR)kinds.o\
	$(DIR)lapack.o\
	$(DIR)numFort.o

# Own personal object files
OBJS = 

# Pattern Matching
%.o: %.f90
	$(F90C) $(CFLAGS) -c $<

#--------------------------Editable MakeFile-------------------------


all: filename

filename: filename.f90 $(OBJS)
	$(F90C) $(CFLAGS) -o $@ $< $(OBJS) $(LIBOBJS) $(LIBS) $(MYLIBS)

plot: filename.f90 $(OBJS)
	$(F90C) $(CFLAGS) -o $@ $< $(OBJS) $(LIBOBJS) $(LIBS) $(MYLIBS)
	./plot
	make customPlot
plot2: filename.f90 $(OBJS)
	$(F90C) $(CFLAGS) -o $@ $< $(OBJS) $(LIBOBJS) $(LIBS) $(MYLIBS)
	./plot2
	make pyplots

# Custom Plot
customPlot: 
	if [ ! -f customPlot.py ] ; \
	then \
		touch customPlot.py; \
		cat $(DIR)/customPlot.py >> customPlot.py; \
		chmod +x customPlot.py; \
	fi; \
        ./customPlot.py 
# Pyplots Plot
pyplots:
	if [ ! -f pyplots.py ] ; \
	then \
		touch pyplots.py; \
		cat $(DIR)/pyplots.py >> pyplots.py; \
		chmod +x pyplots.py; \
	fi; \
        ./pyplots.py

clean:
	rm *.o *.mod customPlot.py pyplots.py
